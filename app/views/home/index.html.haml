.ui.menu
  .ui.container
    = link_to root_path, class: 'item header ' do
      Everchords

- if current_user.present?

  .ui.top.attached.tabular.menu
    - current_user.notebooks.each do |notebook|
      = link_to '#', class: 'item active', data: { tab: notebook.name.underscore } do
        = notebook.name
    .right.menu
      .item
        = link_to 'Add Notebook', new_notebook_path

  - current_user.notebooks.each do |notebook|
    .ui.bottom.attached.active.tab.segment{ data: { tab: notebook.name.underscore } }
      %table.ui.celled.striped.table
        %thead
          %tr
            %th{colspan: "3"}
              = notebook.name
              = link_to notebook_path(notebook), method: :delete do
                %i.icon.close
        %tbody
          - notebook.songs.each do |song|
            %tr
              %td.collapsing
                = link_to song_path(song) do
                  = song.title


- else
  %div{ style: "margin-left:auto;margin-right:auto;" }
    .row
      .col-md-4.text-center
        .promo
          %i.fa.fa-pencil-square-o
        Write songs using
        %br
        ChordPro in Evernote
      .col-md-4.text-center
        .promo
          %i.fa.fa-sign-in
        Sign in using Evernote
      .col-md-4.text-center
        .promo
          %i.fa.fa-music
        Display Song beautifully
        %br
        with Everchords


    %h2= t('devise.sessions.new.sign_in')
    .text-center
      = link_to t('.login_with_evernote', provider: t("omniauth.providers.evernote")),
      user_evernote_omniauth_authorize_path, class: 'btn btn-primary btn-lg'

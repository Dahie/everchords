- content_for :meta do
  %title= "#{@user.username} Profile - Everchords"

.ui.text.container
  .ui.items
    .item
      %a.ui.tiny.image
        %img{:src => "/images/avatar/large/stevie.jpg"}/
      .content
        .header= @user.username
        .website
          /= link_to 'Website', '#'
        .description
          %p


  %table.ui.very.basic.table
    %thead
      %tr
        %th= t('.title')
        %th= t('.album')
        %th= t('.year')
    %tbody
      - @user.songs.published.by_title.each do |song|
        %tr
          %td
            = link_to user_song_path(@user, song) do
              %i.icon.music
              = song.title
          %td.collapsing
            = song.album
          %td.collapsing
            = song.year


  - if @user == current_user
    %h3
      Unpublished songs
      .ui.left.pointing.label
        Only visible to you


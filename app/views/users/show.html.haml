- content_for :meta do
  %title= "#{@user.username} Profile - Everchords"

.ui.text.container
  .ui.items
    .item
      %a.ui.tiny.image
        %img{:src => "/images/avatar/large/stevie.jpg"}/
      .content
        %a.header= @user.username
        .description
          %p
            Stevie Feliciano is a
            %a library scientist
            living in New York City. She likes to spend her time reading, running, and writing.


  %table.ui.very.basic.table
    %thead
      %tr
        %th= t('.title')
        %th= t('.album')
        %th= t('.year')
    %tbody
      /- notebook.songs.grouped_by_album_title.by_title.each do |album_title, song|
      - @user.songs.published.by_title.each do |song|
        %tr
          %td
            = link_to song_path(song) do
              %i.icon.music
              = song.title
          %td.collapsing
            = song.album
          %td.collapsing
            = song.year


  - if @user == current_user
    %h3
      Unpublished songs
      .ui.left.pointing.label
        Only visible to you


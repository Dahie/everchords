%html
  %head
    = yield :meta
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" }

    = csrf_meta_tags

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Fira+Code|Source+Code+Pro&display=swap', media: 'all'
    %link{ href: asset_path("/images/favicons/apple-icon-57x57.png"), rel: "apple-touch-icon", sizes: "57x57" }
    %link{ href: asset_path("apple-icon-60x60.png"), rel: "apple-touch-icon", sizes: "60x60" }
    %link{ href: asset_path("apple-icon-72x72.png"), rel: "apple-touch-icon", sizes: "72x72" }
    %link{ href: asset_path("apple-icon-76x76.png"), rel: "apple-touch-icon", sizes: "76x76" }
    %link{ href: asset_path("apple-icon-114x114.png"), rel: "apple-touch-icon", sizes: "114x114" }
    %link{ href: asset_path("apple-icon-120x120.png"), rel: "apple-touch-icon", sizes: "120x120" }
    %link{ href: asset_path("apple-icon-144x144.png"), rel: "apple-touch-icon", sizes: "144x144" }
    %link{ href: asset_path("apple-icon-152x152.png"), rel: "apple-touch-icon", sizes: "152x152" }
    %link{ href: asset_path("apple-icon-180x180.png"), rel: "apple-touch-icon", sizes: "180x180" }
    %link{ href: asset_path("android-icon-192x192.png"), rel: "icon", sizes: "192x192", type: "image/png" }
    %link{ href: asset_path("favicon-32x32.png"), rel:  "icon", sizes: "32x32", type: "image/png"}
    %link{ href: asset_path("favicon-96x96.png"), rel:  "icon", sizes: "96x96", type: "image/png"}
    %link{ href: asset_path("favicon-16x16.png"), rel:  "icon", sizes: "16x16", type: "image/png"}
    %link{ href: asset_path("manifest.json"), rel: "manifest" }
    %meta{content: "#ffffff", name: "msapplication-TileColor" }
    %meta{content: asset_path("ms-icon-144x144.png"), name: "msapplication-TileImage" }
    %meta{content: "#ffffff", name: "theme-color" }

  %body.minimal.basic
    .ui.menu.main.container
      = render 'shared/navigation'

      - if notice.present?
        .ui.success.message
          %p= notice
      - if alert.present?
        .ui.error.message
          %p= alert

    = yield
    = render 'shared/footer'

    = javascript_include_tag 'application'


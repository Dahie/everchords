.ui.container
  .ui.styled.fluid.accordion
    .title
      %i.dropdown.icon
      Chord Diagrams
    .content
      - @song.chords.each do |chord|
        = link_to "https://ukebuddy.com/ukulele-chords/#{chord}-chord", target: :blank do
          = raw(ChordDiagrams.ukulele_svg(chord.sub('maj', 'M')))
    - @fretboards.each do |fretboard|
      .title
        %i.dropdown.icon
        = fretboard.name
        fretboard
      .content


%div{ style: "column-count: #{@chord_lyrics.columns_count}" }
  .panel.panel-default.panel-meta
    .panel-body
      .pull-right
        %ul.nav.nav-pills
          %li{role: 'presentation'}
            = button_to song_path(@song.guid), method: :put, class: 'btn btn-default btn-sm', role: 'button' do
              %i.fa.fa-refresh
      %h4= @song.title
      %p
        Chords:
        - @contained_chords.each do |chord|
          %a{ tabindex: "0", role:"button", data: {html: "true", placement: 'bottom', toggle: "popover", trigger: "focus", content: "<div><img src=\"#{chord['chord_diag_mini']}\"></div>" } }
            %kbd= chord['original_name']
  = @chord_lyrics.to_html.html_safe
